<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/UsernameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="30sp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                >
            </TextView>

            <TextView
                android:id="@+id/userDistance"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/userDistance"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_marginTop="100dp"
                >

            </TextView>

            <ProgressBar
                android:id="@+id/disProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="140dp"
                android:layout_marginRight="40dp"
                android:progress="45"
                android:progressTint="#FFC107"
                android:scaleY="4">

            </ProgressBar>

            <TextView
                android:id="@+id/waterText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/waterText"
                android:textSize="25sp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="220dp"
                >
            </TextView>

            <ProgressBar
                android:id="@+id/waterProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="220dp"
                android:layout_marginRight="190dp"
                android:progress="50"
                android:progressTint="#03A9F4"

                android:scaleY="4">

            </ProgressBar>

            <Button
                android:id="@+id/waterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="250dp"
                android:layout_marginRight="200dp"
                android:backgroundTint="#03A9F4"
                android:text="@string/waterButton"
                app:strokeColor="#03A9F4">

            </Button>
            <TextView
                android:id="@+id/foodText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/foodText"
                android:textSize="25sp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="199dp"
                android:layout_marginRight="19dp"
                >
            </TextView>

            <ProgressBar
                android:id="@+id/calProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="220dp"
                android:layout_marginRight="20dp"
                android:progress="50"
                android:progressTint="#F44336"
                android:scaleY="4">
            </ProgressBar>

            <Button
                android:id="@+id/foodButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="250dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#F44336"
                android:text="@string/foodButton"
                app:strokeColor="#03A9F4">
            </Button>
            <TextView
                android:id="@+id/dailyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dailyText"
                android:textSize="25sp"
                android:layout_marginTop="360dp"
                android:gravity="center"
                >
            </TextView>

            <ProgressBar
                android:id="@+id/dailyProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="400dp"
                android:layout_marginRight="40dp"
                android:progress="50"
                android:progressTint="#4CAF50"
                android:scaleY="5">

            </ProgressBar>
            <Button
                android:id="@+id/dailyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="450dp"
                android:layout_marginRight="150dp"
                android:backgroundTint="#4CAF50"
                android:text="@string/dailyButton"
                android:textSize="30sp"
                app:strokeColor="#03A9F4">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="270dp"
                android:layout_marginLeft="10dp"
                android:text="@string/menuText"
                android:id="@+id/menuButton"
                >

            </Button>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>